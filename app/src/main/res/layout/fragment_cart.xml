<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.hieuwu.groceriesstore.presentation.viewmodels.CartViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:orientation="vertical"
        tools:context=".presentation.fragments.CartFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/vertical_margin"
                android:text="@string/my_basket"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_big_bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/vertical_margin"
                android:text="@{String.valueOf(viewModel.totalPrice) + ` $`}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_big_bold"
                android:textStyle="bold" />
        </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_detail_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:lineListData="@{viewModel.order.lineItemList}"
                tools:layout_editor_absoluteX="-101dp" />

        <Button
            android:id="@+id/checkout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_normal"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/primary_button"
            android:text="@string/check_out"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nutritions" />
    </LinearLayout>
</layout>